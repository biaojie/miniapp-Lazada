/* pages/myOrder/myOrder.wxss */
page{
  font-size: 32rpx;
  font-family: '微软雅黑'
}
image{
  width: 100%;
  height: 100%;
}
.navall{
  width: 100%;
  display: flex;
  border-bottom: 2rpx solid #D8D8D8;
}
.nav{
  width: 25%;
  padding: 20rpx 0;
  text-align: center;
}
.naved{
  width: 25%;
  padding: 20rpx 0;
  text-align: center;
  background-color: #009CFF;
  color: #FFF;
}
.order{
  width: 100%;
  display: flex;
  flex-direction: column;
  border-top: 25rpx solid #f5f5f9;
}
.orderheader{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  background-color: #009CFF;
  color: #FFF;
  align-items: center;
}
.orderheader text{
  border: 2rpx solid #FFF;
  border-radius: 10rpx;
  padding: 5rpx 15rpx;
}
.ordertitle{
  width: 100%;
  padding: 25rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #D8D8D8;
}
.ordertitle text{
  color: #888888;
}
.orderbody{
  display: flex;
  width: 100%;
  padding: 25rpx;
  box-sizing: border-box;
}
.orderbodyleft{
  width: 30%;
}
.orderbodyleft image{
  width: 200rpx;
  height: 200rpx;
}
.orderbodyright{
  width: 70%;
  display: flex;
  flex-direction: column;
  line-height: 45rpx;
  border-bottom: 2rpx solid #D8D8D8;
  box-sizing: border-box;
  padding-left: 10rpx;
}
.orderprice{
  width: 100;
  text-align: right;
  padding: 0 20rpx 20rpx 0;
  box-sizing: border-box;
  border-bottom: 2rpx solid #D8D8D8;
  align-items: center;
}
.orderprice text{
  color: #E51C23;
}
#cancel{
  border-radius: 10rpx;
  color: #888888;
  border: 2rpx solid #888888;
  padding: 5rpx 10rpx;
}
#Continue{
  border-radius: 10rpx;
  color: #08CAAD;
  border: 2rpx solid #08CAAD;
  padding: 5rpx 10rpx;
  margin: 0 30rpx;
}