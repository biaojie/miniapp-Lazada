/* pages/releaseInformation/releaseInformation.wxss */
page{
  font-size: 32rpx;
  font-family: '微软雅黑';
  background-color: #f5f5f9;
}
image{
  width: 100%;
  height: 100%;
}
.info{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 25rpx;
  box-sizing: border-box;
  background-color: #FFF;
}
.title{
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.title text{
  padding-right: 20rpx;
}
.title2 textarea{
  width: 80%;
  height: 200rpx;
  /* padding-top: 2rpx; */
}
.title2{
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  box-sizing: border-box;
}
.title2 text{
  padding-right: 20rpx;
}
.info2{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top:20rpx;
}
.upload{
  width: 25%;
  display: flex;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}
.uploadpic{
  margin: auto;
  width: 170rpx;
  height: 170rpx;
  border: 2rpx solid gainsboro;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  align-items: center;
  position: relative;
}
#uploadpic{
  font-size: 30rpx;
  color: #BFBFBF;
}

.upload_1{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  position: relative;
}
.upload_2{
  position: absolute;
  top: 0;
  right: 0;
  background-color: #FFF;
  z-index: 999;
  opacity: 0.5;
}
#add3{
  width: 50rpx;
  height: 50rpx;
  margin: auto;
}
.hide{
  display: none;
}
.show{
  display: block;
}
.distance{
  width: 100%;
  height: 150rpx;
}
button{
  width: 100%;
  border-radius: 0;
  background-color: #009CFF;
  color: #FFF;
  font-size: 36rpx;
  position: fixed;
  bottom: 0;
}
.auto{
  margin: auto;
  display: flex;
  flex-direction: column;
}