/* pages/personalpage/personalpage.wxss */
page{
  font-size: 32rpx;
  font-family: '微软雅黑';
  background-color: #f5f5f9;
}
image{
  width: 100%;
  height: 100%;
}
.title{
  box-sizing: border-box;
  padding: 30rpx;
}
.top{
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  background-color: #FFF;
  padding: 25rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #D8D8D8;
}
.top image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 180rpx;
  border: 2rpx solid #D8D8D8;
  margin: auto;
}
.top text{
  padding-top: 20rpx;
  width: 100%;
  text-align: center;
}
.top1{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  box-sizing: border-box;
}
.top12{
  width: 50%;
  margin: auto;
  padding-left: 40rpx;
  box-sizing: border-box;
}
.top12 text{
  border: 2rpx solid #D8D8D8;
  padding: 3rpx 10rpx;
}
.top11{
  text-align: right;
  box-sizing: border-box;
  padding-right: 40rpx;
  width: 50%;
  border-right: 2rpx solid #D8D8D8;
  margin: auto;
}
.post{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 25rpx;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 2rpx solid #D8D8D8;
}
.pleft{
  width: 60%;
  display: flex;
  flex-direction: column;
  font-size: 36rpx;
  box-sizing: border-box;
  padding-right: 10rpx;
}
.pleft text{
  padding-top: 20rpx;
  color: #888;
  font-size: 30rpx;
  line-height: 45rpx;
  overflow: hidden;
  max-height:90rpx;

}
.pright{
  width: 40%;
  display: flex;
  justify-content: flex-end;
}
.pright image{
  width: 100%;
  height: 220rpx
}
.pbottom{
  display: flex;
  margin-top: 20rpx;
  align-items: center;
  width: 100%;
}
#pbimg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 180rpx;
  padding: 0;
}
.pbottom image{
  width: 40rpx;
  height: 40rpx;
  padding-left: 30rpx;
  padding-right: 15rpx;
}
.pbottom text{
  padding: 0 15rpx;
  flex: 1;
}