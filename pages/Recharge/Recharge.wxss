/* pages/Recharge/Recharge.wxss */
page{
  background-color: #FFF;
  font-size: 32rpx;
  font-family: '微软雅黑';
}
image{
  width: 100%;
  height: 100%;
}
.balance{
  width: 100%;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #D4D4D4;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
}
.recharge{
  width: 100%;
  display: flex;
  flex-direction: column;
  border-bottom: 2rpx solid #D4D4D4;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
}
.rec{
  width: 100%;
  display: flex;
  align-items: center;
  padding-top: 30rpx;
  font-weight: bold;
}
.Determine{
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}
.Determine button{
  width: 90%;
  border-radius: 15rpx;
  background-color: #009CFF;
  border: none;
  color: #FFF;
  font-size: 34rpx;
}