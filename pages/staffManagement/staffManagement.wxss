/* pages/staffManagement/staffManagement.wxss */
page{
  font-size: 32rpx;
  font-family: '微软雅黑';
  background-color: #f5f5f9;
}
image{
  width: 100%;
  height: 100%;
}
.add{
  display: flex;
  background-color: #FFF;
  padding: 25rpx;
  box-sizing: border-box;
  border-top: 2rpx solid #D8D8D8;
  border-bottom: 2rpx solid #D8D8D8;
  margin-top: 20rpx;
}
.add text{
  flex: 1;
}
.add image{
  width: 40rpx;
  height: 40rpx;
}
.staff{
  display: flex;
  background-color: #FFF;
  padding: 0  25rpx;
  flex-wrap: wrap;
  box-sizing: border-box;
  border-top: 2rpx solid #D8D8D8;
  border-bottom: 2rpx solid #D8D8D8;
  margin-top: 20rpx;
}
.staff1{
  width: 100%;
  display: flex;
  padding: 25rpx 0;
  border-bottom: 2rpx solid #E6E6E6;
}
.staff1 text{
  padding-right: 20rpx;
  white-space: nowrap;
}
.staff2{
  width: 100%;
  display: flex;
  padding: 25rpx 0;
  align-items: center;
}
#confirm{
  flex: 1;
  padding-left: 20rpx
}
#other{
  padding-left: 40rpx;
  color: #888888;
}
checkbox{
  margin-bottom: 20rpx;
}