/* pages/coupan/coupan.wxss */
page{
  font-size: 32rpx;
  font-family: '微软雅黑';
  background-color: #f5f5f9;
}

.top{
  width: 100%;
  display: flex;
  font-size: 36rpx;
}
.nav{
  width: 50%;
  text-align: center;
  padding: 15rpx 0;
  border-bottom: 2rpx solid #D8D8D8;

}
.naved{
  width: 50%;
  text-align: center;
  padding: 15rpx 0;
  border-bottom: 5rpx solid #009CFF;
  color: #009CFF;
}
.coupan{
  width: 100%;
  display: flex;
  margin-top: 20rpx;
  border-top: 2rpx solid #D8D8D8;
  border-bottom: 2rpx solid #D8D8D8;
  /* height: 200rpx; */
  position: relative;
  background-color: #FFF;
  flex-direction: column;
}
.spare{
  width: 0;
  height: 0;
  border-top: 70px solid #07C9AC;
  border-left: 70px solid transparent; 
  position: absolute;
  top: 0;
  right: 0
}
.day{
  display: flex;
  position: absolute;
  top: 0px;
  right: -20px;
  text-align: center;
  color: #FFF;
  width: 55px;
  font-size: 30rpx;
   -moz-transform:rotate(45deg) scale(1.00,1.00) translate(0px,0px) skew(0deg,0deg);-moz-transform-origin:0% 0%;-webkit-transform:rotate(45deg) scale(1.00,1.00) translate(0px,0px) skew(0deg,0deg);-webkit-transform-origin:0% 0%;-o-transform:rotate(45deg) scale(1.00,1.00) translate(0px,0px) skew(0deg,0deg);-o-transform-origin:0% 0%;transform:rotate(45deg) scale(1.00,1.00) translate(0px,0px) skew(0deg,0deg);transform-origin:0% 0%; 
}
.title{
  font-size: 34rpx;
  padding: 20rpx 20rpx 0 20rpx;
  box-sizing: border-box;
}
.price{
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 55rpx;
  color: #E51C23;
  align-items: center;
  padding: 15rpx 50px 20rpx 20rpx;
  box-sizing: border-box;
}
.price text{
  border: 2rpx solid #44D6C0;
  border-radius: 8rpx;
  padding: 0rpx 10rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #07C9AC;
  font-size: 30rpx;
}
.data{
  font-size: 28rpx;
  padding: 0 20rpx 20rpx 20rpx;
  border-bottom: 2rpx solid #D8D8D8;
}
.info{
  font-size: 28rpx;
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: center;
}
.info text{
  color: #E51C23;
  flex: 1;
  text-align: right;
  width: 20%;
}
.info image{
  width: 40rpx;
  height: 40rpx;
}