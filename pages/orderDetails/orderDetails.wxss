/* pages/orderDetails/orderDetails.wxss */
page{
  font-size: 32rpx;
  font-family: '微软雅黑';
  background-color: #f5f5f9;
}
image{
  width: 100%;
  height: 100%;
}
.top{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 25rpx;
  box-sizing: border-box;
  background-color: #66C8FF;
}
.top text{
  width: 100%;
  padding-bottom: 25rpx;
  color: #353535;
}
.top-1{
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.top-11{
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
  text-align: center;
}
.top-11 image{
  width: 50rpx;
  height: 50rpx;
  margin: auto;
  padding-bottom: 15rpx;
}
.top-12{
  color: #FFF;
  text-align: center;
  overflow: hidden;
  max-height: 40rpx;
  flex: 1;
}
.orderbody{
  display: flex;
  width: 100%;
  padding: 25rpx;
  border-bottom: 2rpx solid #D8D8D8;
  border-top: 2rpx solid #D8D8D8;
  box-sizing: border-box;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
  background-color: #FFF;
}
.orderbodyleft{
  width: 30%;
}
.orderbodyleft1{
  width: 70%;
  display: flex;
  flex-direction: column;
  line-height: 45rpx;
  box-sizing: border-box;
  padding-left: 10rpx
}
#orderbodyleft1{
  font-size: 30rpx;
  padding-top: 25rpx;
}
.orderbodyleft image{
  width: 200rpx;
  height: 200rpx;
}
.orderbodyright{
  width: 70%;
  display: flex;
  flex-direction: column;
  line-height: 45rpx;
  box-sizing: border-box;
  padding-left: 10rpx
}
.orderbodyright1{
  width: 30%;
  display: flex;
  justify-content: flex-end;
}
.orderbodyright1 image{
  width: 200rpx;
  height: 200rpx;
}
.info{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 25rpx;
  border-top: 2rpx solid #D8D8D8;
  border-bottom: 2rpx solid #D8D8D8;
  margin: 20rpx 0;
  background-color: #FFF;
}
.info-1{
  padding-bottom: 15rpx;
  align-items: center;
  display: flex;
  width: 100%;
}
.info image{
  width: 50rpx;
  height: 50rpx;
  padding-right: 20rpx;
}
.info-1 text{
  flex: 1;
}
.info-2{
  align-items: center;
  display: flex;
  width: 100%;
}
.info-2 text{
  color: #969696;
}
.orderinfo{
  width: 100%;
  display: flex;
  justify-content: space-between;
  color: #969696;
}
#orderinfo{
  padding-bottom: 25rpx;
}
#orderinfoprice{
  color: #E6242B;
}
#orderinfoprice2{
  color: #000;
  font-size: 30rpx;
}
#orderinfodata{
  color: #08CDC9;
}
.cancel{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  padding: 25rpx;
  box-sizing: border-box;
}
.cancel text{
  border: 2rpx solid #888888;
  border-radius: 10rpx;
  padding: 5rpx 15rpx;
  color: #888888;
}