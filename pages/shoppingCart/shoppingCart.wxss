/* pages/shoppingCart/shoppingCart.wxss */
page{
  font-size: 32rpx;
  font-family: '微软雅黑';
  background-color: #f5f5f9;
}
image{
  width: 100%;
  height: 100%;
}
.scart{
  width: 100%;
  background-color: #FFF;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  border-top: 2rpx solid #D8D8D8;
  border-bottom: 2rpx solid #D8D8D8;
  margin-bottom: 20rpx;
}
.stitle{
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 25rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #D8D8D8;
}
.stitle image{
  width: 50rpx;
  height: 50rpx;
}
.sgoodimg{
  width: 45%;
  box-sizing: border-box;
  padding-right: 30rpx;
  padding-left: 25rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
}
.sgoodimg image{
  width: 100%;
  height: 250rpx;
}
.scontent{
  padding-top: 25rpx;
  padding-right: 25rpx;
  padding-bottom: 25rpx;
  box-sizing: border-box;
  width: 55%;
  display: flex;
  flex-wrap: wrap;
}
.sctitle{
  width: 100%;
  line-height: 45rpx;
  overflow: hidden;
  max-height: 90rpx;
}
.scall{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-self: flex-end;
}
.scoldprice{
  width: 100%;
  text-decoration: line-through;
  color: #888;
  padding-bottom: 10rpx;
}
.scprice{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.scprice1 {
  display: flex;
  align-items: center;
  border: 2rpx solid #D8D8D8;
}
.scprice text{
  color: #E51C23;
}
.scprice image{
  width: 30rpx;
  height: 30rpx;
  padding: 0 10rpx;
}
.scprice1 text{
  color: #000;
  width: 80rpx;
  text-align: center;
  border-right: 2rpx solid #D8D8D8;
  border-left: 2rpx solid #D8D8D8;
}
.sbottom{
  width: 100%;
  display: flex;
  box-sizing: border-box;
  padding: 25rpx;
  justify-content: space-between;
  border-top: 2rpx solid #D8D8D8;
}
.bottom{
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  align-items: center;
  border-top: 2rpx solid #D8D8D8;
  border-bottom: 2rpx solid #D8D8D8;
  background-color: #FFF;
  padding-left: 25rpx;
  box-sizing: border-box;
}
.bottom1{
  width: 25%;
  display: flex;
  align-items: center;
}
.bottom1 text{
  box-sizing: border-box;
  padding-left: 10rpx;
}
.bottom2{
  width: 40%;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  color: #888;
}
.bottom2 text{
  color: #E51C23;
}
.bottom3{
  width: 35%;
  background-color: #FD8252;
  padding: 25rpx 0;
  text-align: center;
  color: #FFF;
}