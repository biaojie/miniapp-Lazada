<!--pages/mine/mine.wxml-->
<!--我的  -->
<view class='top'>
  <view class='topinfo'>
    <view class='topinfo-1'>
      <image src='https://ss1.bdstatic.com/70cFuXSh_Q1YnxGkpoWK1HF6hhy/it/u=12867320,655225767&fm=27&gp=0.jpg' id='Headportrait'></image>
      <text>昵称</text>
      <image src='../../images/Scancode.png'></image>
    </view>
    <view class='topinfo-2'>
      <view class='topinfo-2-1' bindtap='coupan'><text>2</text>我的优惠券</view>
      <view class='topinfo-2-1' bindtap='myBalance'><text>999</text>我的余额</view>
      <view class='topinfo-2-1' bindtap='myIntegral'><text>222</text>我的积分</view>
    </view>
  </view>
</view>

<view class='top2'>
  <view class='topdorder line' bindtap='myOrder'>
    <image src='../../images/myorder.png'/>
    <text>我的订单</text>
  </view>
  <view class='topdorder' bindtap='sign'>
    <image src='../../images/integral.png'/>
    <text>签到送积分</text>
  </view>
</view>

<view class='list' bindtap='myRelease'>
  <image src='../../images/Release.png'/>
  <text>我的发布</text>
  <image src='../../images/right.png' />
</view>
<view class='list' bindtap='myAddress'>
  <image src='../../images/address.png'/>
  <text>我的地址</text>
  <image src='../../images/right.png' />
</view>
<view class='list' bindtap='business'>
  <image src='../../images/business.png'/>
  <text>农垦商家</text>
  <image src='../../images/right.png' />
</view>
<view class='list' bindtap='myCollection'>
  <image src='../../images/Collection.png'/>
  <text>我的收藏</text>
  <image src='../../images/right.png' />
</view>
<view class='list' bindtap='myFollow'>
  <image src='../../images/follow.png'/>
  <text>我的关注</text>
  <image src='../../images/right.png' />
</view>
<view class='list'>
  <image src='../../images/help.png'/>
  <text>帮助反馈</text>
  <image src='../../images/right.png' />
</view>


