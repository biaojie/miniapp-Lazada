/* pages/mine/mine.wxss */
page{
  font-size: 32rpx;
  font-family: '微软雅黑'
}
.top{
  width: 100%;
  min-height: 300rpx;
  background: linear-gradient(to top, #F4F4F8 50%, #009CFF 50%);
  display: flex;
  justify-content: center;
  padding-top: 20rpx;
}
.topinfo{
  width: 95%;
  border: 2rpx solid #D8D8D8;
  border-radius: 10rpx;
  background-color: #FFF; 
  padding: 20rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.topinfo-1{
  width: 100%;
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
}
.topinfo-1 image{
  width: 60rpx;
  height: 60rpx;
  
}
.topinfo text{
  padding: 0 15px;
  flex: 1;
}
#Headportrait{
  width: 120rpx;
  height: 120rpx;
  border-radius: 180rpx;
  border: 2rpx solid #D8D8D8;
}
.topinfo-2{
  display: flex;
}
.topinfo-2-1{
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.topinfo-2-1 text{
  color: #D92929;
}
.top2{
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 2rpx solid #D8D8D8;
  border-bottom: 2rpx solid #D8D8D8;
}
.topdorder{
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.line{
  border-right:2rpx solid #D8D8D8;
}
.topdorder image{
  width: 60rpx;
  height: 60rpx;
  align-self: center;
  margin-bottom: 10rpx;
}
.topdorder text{
  width: 100%;
  text-align: center;
}
.list{
  width: 100%;
  display: flex;
  align-items: center;
  padding: 25rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #DDDDDD;
}
.list image{
  width: 50rpx;
  height: 50rpx;
}
.list text{
  padding: 0 20rpx;
  flex: 1;
}
