/* pages/myAddress/myAddress.wxss */
page{
  background-color: #f5f5f9;
  font-size: 32rpx;
  font-family: '微软雅黑';
}
image{
  width: 100%;
  height: 100%;
}
.addadr{
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 25rpx;
  font-size: 36rpx;
  font-weight: 700;
  border-bottom: 2rpx solid #f5f5f9;
}
.addadr image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.info{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.title{
  width: 100%;
  font-size: 36rpx;
  font-weight: bold;
  box-sizing: border-box;
  padding: 25rpx;
}
.text{
  width: 100%;
  box-sizing: border-box;
  padding: 25rpx;
  border-top: 2rpx solid #D8D8D8;
  border-bottom: 2rpx solid #D8D8D8;
  background-color: #FFF;
}
.text1{
  width: 100%;
  display: flex;
  padding-bottom: 20rpx;
}
.text1 text{
  padding: 0 20rpx;
  flex: 1;
}
.text2{
  line-height: 45rpx;
}
.newaddr{
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #FFF;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 1;
}
.newaddr1{
  padding: 25rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #D8D8D8;
}
.newaddr1 text{
  margin-right: 25rpx;
}
.newaddr1 input{
  flex: 1;
}
.newaddr button{
  background-color: #009CFF;
  border-radius: 10rpx;
  border: none;
  color: #FFF;
  margin: auto;
  width: 30%;
  font-size: 34rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
}
.bg{
  background-color: #000;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 0;
  top: 0;
  left: 0;
}
.hide{
  display: none;
}
.show{
  display: block;
}