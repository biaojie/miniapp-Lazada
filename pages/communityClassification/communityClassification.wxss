/* pages/communityClassification/communityClassification.wxss */
page{
  font-size: 32rpx;
  font-family: '微软雅黑';
  background-color: #f5f5f9;
}
image{
  width: 100%;
  height: 100%;
}
.post{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 25rpx;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 2rpx solid #D8D8D8;
  border-top: 2rpx solid #D8D8D8;
}
.pleft{
  width: 60%;
  display: flex;
  flex-direction: column;
  font-size: 36rpx;
  box-sizing: border-box;
  padding-right: 10rpx;
}
.pleft text{
  padding-top: 20rpx;
  color: #888;
  font-size: 30rpx;
  line-height: 45rpx;
  overflow: hidden;
  max-height:90rpx;

}
.pright{
  width: 40%;
  display: flex;
  justify-content: flex-end;
}
.pright image{
  width: 100%;
  height: 220rpx
}
.pbottom{
  display: flex;
  margin-top: 20rpx;
  align-items: center;
  width: 100%;
}
#pbimg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 180rpx;
  padding: 0;
}
.pbottom image{
  width: 40rpx;
  height: 40rpx;
  padding-left: 30rpx;
  padding-right: 15rpx;
}
.pbottom text{
  padding: 0 15rpx;
  flex: 1;
}
.top{
  width: 100%;
  display: flex;
  justify-content: center;
  background-color: #FFF;
  padding: 25rpx 0;
  border-bottom: 2rpx solid #D8D8D8;
  margin-bottom: 20rpx;
}
.top image{
  width: 96%;
  height: 350rpx;
}
.distance{
  width: 100;
  height: 150rpx;
}
button{
  width: 100%;
  border-radius: 0;
  background-color: #009CFF;
  color: #FFF;
  font-size: 36rpx;
  position: fixed;
  bottom: 0;
}
.bg{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background-color: #000;
  opacity: 0.5;
}

.infoall{
  background-color: #FFF;
  width: 96%;
  display: flex;
  flex-wrap: wrap;
  padding: 25rpx;
  box-sizing: border-box;
  top: 150rpx;
  left: 2%;
  position: fixed;
}
.infoimg{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  padding-bottom: 30rpx;
}
.infoimg image{
  width: 40rpx;
  height: 40rpx;
}
.infoall text{
  width: 25%;
  text-align: center;
  padding-bottom: 40rpx;
}
.show{
  display: block;
}
.hide{
  display: none;
}