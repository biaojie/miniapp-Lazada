/* pages/informationContent/informationContent.wxss */
page{
  font-size: 32rpx;
  font-family: '微软雅黑';
  background-color: #f5f5f9;
}
image{
  width: 100%;
  height: 100%;
}
.info{
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 25rpx;
  box-sizing: border-box;
  background-color: #FFF;
}
.info1{
  display: flex;
  width: 100%;
  align-items: center;
}
#info1image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 180rpx;
  border: 2rpx solid #D8D8D8; 
}
#nickname{
  padding: 0 20rpx;
  flex: 1;
}
#care{
  background-color: #009CFF;
  color: #FFF;
  font-weight: bold;
  padding: 3rpx 20rpx;
}
.info text{
  line-height: 45rpx;
  padding: 20rpx 0;
}
.info image{
  width: 100%;
  height: 350rpx;
  margin-bottom:10rpx; 
}
.comment{
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #FFF;
  margin-bottom: 150rpx;
}
.comment1{
  width: 100%;
  display: flex;
  padding: 25rpx;
  box-sizing: border-box;
  border-top: 2rpx solid #D8D8D8;
  border-bottom: 2rpx solid #D8D8D8;
  justify-content: space-between;
}
.comment2{
  display: flex;
  padding: 25rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #D8D8D8;
}
.comment21{
  width: 25%; 
}
.comment21 image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 180rpx;
  border: 2rpx solid #D8D8D8; 
}
.comment22{
  display: flex;
  flex-direction: column;
}
.comment221{
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding-bottom: 10rpx;
}
.comment221 text{
  line-height: 45rpx;
}
.bottom{
  position: fixed;
  bottom: 0;
  right: 0;
  width: 100%;
  background-color: #009CFF;
  display: flex;
}
.bottom1{
  flex: 1;
  border-right: 2rpx solid #FFF; 
  display: flex;
  padding: 12rpx 0;
}
.bottom1 image{
  width: 60rpx;
  height: 60rpx;
  margin: auto;
}
.write{
  width: 100%;
  padding: 25rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  background-color: #FFF;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
  z-index: 2;
}
.write textarea{
  width: 100%;
  border: 2rpx solid #888;
  max-height: 200rpx;
  box-sizing: border-box;
  padding: 20rpx;
}
.write button{
  width: 25%;
  text-align: center;
  font-size: 34rpx;
  color: #FFF;
  background-color: #009CFF;
  border-radius: 5rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
  float: right;
}
.bg{
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #000;
  opacity: 0.5;
  z-index: 1;
  top: 0;
  left: 0;
}
.hide{
  display: none;
}
.show{
  display: block;
}