/* pages/myBalance/myBalance.wxss */
page{
  background-color: #f5f5f9;
  font-size: 32rpx;
  font-family: '微软雅黑';
}
image{
  width: 100%;
  height: 100%;
}
.top{
  width: 100%;
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  background-color: #38C3FF;
}
.top1{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  margin-bottom: 30rpx;
}
.top1 text{
  color: #FFF;
  font-size: 60rpx;
  padding-bottom: 10rpx;
}
.top2{
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.top21{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}
.top21 image{
  margin: auto;
  width: 100rpx;
  height: 100rpx;
  padding-bottom: 15rpx;
}
.title{
  text-align: center;
  width: 100%;
  font-size: 36rpx;
  background-color: #F5F5F9;
  padding: 30rpx 0;
}
.datailed{
  width: 100%;
  display: flex;
  padding: 25rpx;
  box-sizing: border-box;
  background-color: #FFF;
  border-top: 2rpx solid #D8D8D8;
  border-bottom: 2rpx solid #D8D8D8;
  margin-bottom: 15rpx;
}
.datailed1{
  width: 75%;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}
.datailed1 text{
  font-size: 32rpx;
  padding-bottom: 20rpx;
  line-height: 50rpx;
  box-sizing: border-box;
  padding-right: 20rpx;
}
.datailed2{
  width: 25%;
  border-left: 2rpx dotted #D8D8D8;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #E51C23;
  font-size: 50rpx;
}
.datailed2 text{
  color: #009CFF;
}